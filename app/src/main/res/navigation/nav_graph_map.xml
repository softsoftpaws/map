<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_map"
    app:startDestination="@id/mapFragment">

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.myapplication.screens.profile.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/mapFragment"
        android:name="com.example.myapplication.screens.map.MapFragment"
        android:label="Map"
        tools:layout="@layout/fragment_map" >
        <action
            android:id="@+id/action_mapFragment_to_infoFragment"
            app:destination="@id/infoFragment" />
        <action
            android:id="@+id/action_mapFragment_to_placeFragment"
            app:destination="@id/placeFragment" />
    </fragment>

    <fragment
        android:id="@+id/markerFragment"
        android:name="com.example.myapplication.screens.listOfPlaces.PlaceListFragment"
        android:label="Places"
        tools:layout="@layout/fragment_place_list" />
    <fragment
        android:id="@+id/infoFragment"
        android:name="com.example.myapplication.screens.addInfo.InfoFragment"
        android:label="fragment_info"
        tools:layout="@layout/fragment_info" >
        <action
            android:id="@+id/action_infoFragment_to_mapFragment"
            app:destination="@id/mapFragment" />
        <argument
            android:name="lat"
            app:argType="string" />
        <argument
            android:name="long"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/placeFragment"
        android:name="com.example.myapplication.screens.place.PlaceFragment"
        android:label="fragment_place"
        tools:layout="@layout/fragment_place" >
        <action
            android:id="@+id/action_placeFragment_to_mapFragment"
            app:destination="@id/mapFragment" />
        <argument
            android:name="placeName"
            app:argType="string"/>
    </fragment>

</navigation>
